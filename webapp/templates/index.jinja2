<!DOCTYPE html>
<html>
<head>
  <title>Resume Classification Report</title>
  <!-- Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    body {
      font-family: 'Inter', sans-serif;
      background-color: #f9f9f9;
      margin: 40px;
      color: #333;
    }

    h1, h2 {
      color: #222;
      margin-top: 40px;
      font-weight: 600;
    }

    .section {
      margin-bottom: 50px;
    }

    table.data {
      width: 80%;
      border-collapse: collapse;
      margin: 20px auto;
      background-color: #fff;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
      border-radius: 8px;
      overflow: hidden;
    }

    table.data th {
      background-color: #f2f2f2;
      color: #333;
      padding: 12px;
      font-weight: 600;
    }

    table.data td {
      padding: 12px;
      text-align: center;
      border-top: 1px solid #eee;
    }

    canvas {
      display: block;
      margin: 0 auto;
    }

    .icon {
      font-size: 22px;
      margin-right: 10px;
    }

    .centered {
      text-align: center;
    }

    form {
      text-align: center;
      margin-bottom: 30px;
    }

    form input[type="file"] {
      padding: 8px;
      margin: 10px;
    }

    form button {
      padding: 8px 16px;
      background-color: #4BC0C0;
      border: none;
      color: white;
      cursor: pointer;
      border-radius: 4px;
      font-weight: bold;
    }

    .results {
      text-align: center;
      margin-top: 20px;
    }

    .results ul {
      list-style-type: none;
      padding: 0;
    }

    .results li {
      margin-bottom: 10px;
    }
  </style>
</head>
<body>

  <h1 class="centered">Resume Classification Report</h1>

  <!-- ‚úÖ Upload Form -->
  <div class="section">
    <h2 class="centered">üì§ Upload Your Resume (PDF)</h2>
    <form action="/" method="POST" enctype="multipart/form-data">
      <input type="file" name="resume" accept=".pdf" required>
      <button type="submit">Upload & Analyze</button>
    </form>

    {% if results %}
    <div class="results">
      <h3>üîç Match Results:</h3>
      <ul>
        {% for category, data in results.items() %}
          <li>
            <strong>{{ category }}</strong> ‚Äì {{ data.match_percent }}% match<br>
            Matched Keywords: {{ data.matched }}
          </li>
        {% endfor %}
      </ul>
    </div>
    {% endif %}
  </div>

  <!-- üìÑ Table Output -->
  <div class="section">
    <h2>üìÑ Table Output</h2>
    <table class="data">
      <tr>
        <th>File</th>
        <th>Predicted Role</th>
      </tr>
      {% for index, row in data.iterrows() %}
      <tr>
        <td><a href="../webapp/static/resumes/{{ row['File'] }}" target="_blank">{{ row['File'] }}</a></td>
        <td>{{ row['Predicted Role'] }}</td>
      </tr>
      {% endfor %}
    </table>
  </div>

  <!-- üìä Chart -->
  <div class="section">
    <h2>üìä Visual Summary</h2>
    <div class="centered">
      <h3>Resume Role Distribution</h3>
      <canvas id="roleChart" width="400" height="400"></canvas>
    </div>
  </div>

  <script type="application/javascript">
    const chartLabels = {{ labels | tojson | safe }};
    const chartValues = {{ values | tojson | safe }};
    const ctx = document.getElementById('roleChart').getContext('2d');

    const roleChart = new Chart(ctx, {
      type: 'pie',
      data: {
        labels: chartLabels,
        datasets: [{
          data: chartValues,
          backgroundColor: ['#4BC0C0', '#FF6384', '#FFCE56', '#36A2EB', '#9966FF'],
        }]
      },
      options: {
        responsive: true,
        plugins: {
          legend: {
            position: 'bottom',
          }
        }
      }
    });
  </script>

</body>
</html>

{% if result %}
  <p><strong>Result:</strong> {{ result }}</p>
{% endif %}

